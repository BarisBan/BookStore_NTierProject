
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

@model BookStore_NTierProject.UI.Areas.Admin.Models.DTO.CategoryDTO

<section class="content-header">
    <ol class="breadcrumb bg-gray-active">
        <li><a href="\Admin\Home\AdminHomeIndex"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="\Admin\Category\List">Category List</a></li>
        <li class="active">Add Category</li>
    </ol>
</section>
<br />
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Update Category</h3>
                </div>
                <form role="form" action="/Admin/Category/Update" method="post" enctype="multipart/form-data">
                    <div class="box-body">
                        <div class="form-group">
                            <label>Catgory Name</label>
                            <input type="text" name="Name" value="@Model.Name" class="form-control" placeholder="Category Name">
                        </div>
                        <div class="form-group">
                            <label>Description</label>
                            <input type="text" name="Description" value="@Model.Description" class="form-control" placeholder="Description">
                        </div>
                    </div>
                    <input type="hidden" name="ID" value="@Model.ID" />
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a href="\Admin\Category\List" class="btn btn-default ">Category List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
