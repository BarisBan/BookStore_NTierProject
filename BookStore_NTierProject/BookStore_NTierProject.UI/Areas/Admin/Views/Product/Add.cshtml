
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

@model BookStore_NTierProject.UI.Areas.Admin.Models.VM.AddProductVM

<section class="content-header">
    <ol class="breadcrumb bg-gray-active">
        <li><a href="/Admin/Home/AdminHomeIndex"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/Product/List">Product List</a></li>
        <li class="active">Add Product</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add Product</h3>
                </div>
                <form action="/Admin/Product/Add" enctype="multipart/form-data" method="post" role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="text">Product Name</label>
                            <input type="text" name="Name" class="form-control" placeholder="Product Name">
                        </div>
                        <div class="form-group">
                            <label for="text">Author Name</label>
                            <input type="text" name="Author" class="form-control" placeholder="Author Name">
                        </div>
                        <div class="form-group">
                            <label for="text">Quantity</label>
                            <input type="text" name="Quantity" class="form-control" placeholder="Quantity">
                        </div>
                        <div class="form-group">
                            <label for="text">Unit Price</label>
                            <input type="text" name="Price" class="form-control" placeholder="Unit Price">
                        </div>
                        <div class="form-group">
                            <label for="text">Units In Stock</label>
                            <input type="text" name="UnitInStock" class="form-control" placeholder="Units In Stock">
                        </div>
                        <div class="form-group">
                            <label for="CategoryID">Choose Category</label>
                            <select name="CategoryID" class="form-control">
                                @foreach (var item in Model.Categories)


                                {
                                    <option value="@item.ID">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a href="/Admin/Product/List"class="btn btn-default">Product List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

